<html>
<head>
  <title>Void Servers - Search</title>
<%- include('../blocks/header') %>
</head>
<body>
  <%- include('../blocks/navbar', { bot, user }) %>
  <div class="bigthingy row">
  <div class="seeme col-md-8 offset-md-2 row">
    <div class="seeme col-sm-2 sinfo">
      <p id="bigytxt" class="bigyimg" style="font-size:88px;"><i class="fas fa-search"></i></p>
    </div>
    <div class="seeme col-sm-10 sinfo">
        <p id="bigytxt"><span style="font-size:25px; font-weight:bold;">Search</span><br />You are currently browsing all servers.</p>
    </div>
  </div>
  </div>
  <div class="heading-bar">
  <div class="container">
    <form action="/search">
  <div class="form-row">
    <div class="col">
      <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for servers..." value="<%= search %>" autocomplete="off" id="q" name="q">
      <div class="input-group-append">
    <button class="btn btn-info" type="submit">Search</button>
  </div>
</div>
    </div>
  </div>
</form>
  </div>
</div>
  <br />
  <div class="container">
    <div class="row">
  <% if (cards.length === 0) { %>
      <div class="col-xs-12 col-md-6 col-lg-3">
      <div class="card">
        <div class="card-block">
          <br /><br />
          <h4 class="card-title">No Servers</h4>
          <p class="card-text">No servers selected this category.</p>
        </div>
        <div class="card-footer">
          <a class="btn btn-secondary btn-sm btn-block" href="/me/add" role="button">Add Server</a>
        </div>
        </div>
      </div>
            <% } else { %>
              <% for(let i of cards) { %>
                <div class="col-xs-12 col-md-6 col-lg-3">
    <div class="card">
    <div class="card-block">
      <% if (bot.guilds.cache.get(i.guildid).icon) { %>
        <img class="card-img-top" src="<%= `${bot.guilds.cache.get(i.guildid).iconURL({format: 'png', size: 128 })}` %>" width="50px" style="width:128px; height:128px; background-color:#F6F6F6; border-radius:50%;" alt="">
      <% } else { %>
        <canvas class="card-img-top" id="<%= bot.guilds.cache.get(i.guildid).name.split(' ').join('').replace(`'`, ``) %>" width="50px" style="width:128px; height:128px; background-color:#7289da; border-radius:50%;" height="50px"></canvas>
        <script>
          function draw() {
            const ctx = document.getElementById("<%= bot.guilds.cache.get(i.guildid).name.split(' ').join('').replace(`'`, ``) %>").getContext('2d');
            ctx.font = '20px Arial';
            ctx.textAlign = "center";
            ctx.fillStyle = "white";
            ctx.fillText("<%= bot.guilds.cache.get(i.guildid).name.split(' ').map(v => v[0]).join('') %>", 25, 33);
          };
          draw();
        </script>
      <% } %>
      <h4 class="card-title"><%= bot.guilds.cache.get(i.guildid).name %></h4>
      <p class="card-text"><%= (i.description).slice(0, 55) %><%= (i.description).length > 55 ? "..." : "" %></p>
    </div>
    <div class="card-footer">
      <a class="btn btn-success btn-sm btn-block" href="/server/<%= i.guildid %>/join" role="button">Join</a>
      <a class="btn btn-secondary btn-sm btn-block" href="/server/<%= i.guildid %>/" role="button">View Page</a>
    </div>
  </div>
  </div>
    <% } %>
  <% } %>
  </div>
  </div><br /><br />
  <center>
  <div id="pagenation">
  <p>Page <strong><%= page %></strong> of <strong><%= maxpages %></strong></p>
  <a style="display: inline-block;" href="/search/?q=<%= search %><%= (page-1) != 0 ? `&page=${page-1}` : '' %>" class="btn btn-secondary btn-block"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</a>
  <a style="display: inline-block;" href="/search/?q=<%= search %>&page=<%= page+1 %>" class="btn btn-secondary btn-block">Next <i class="fa fa-arrow-right" aria-hidden="true"></i></a>
  <div>
  </center>
  <%- include('../blocks/footer') %>
</body>
<style>
  a {
 -webkit-transition: .25s all;
 transition: .25s all;
}
.card {
  padding-left:auto;
  padding-right:auto;
  min-height:360px;
  margin-top:15px;
 box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
 -webkit-transition: .25s box-shadow;
 transition: .25s;
 background: #FEFEFE;
 top:0;
}
.card:focus, .card:hover {
 box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15);
 top:-1px;
}
.card-inverse .card-img-overlay {
 background-color: rgba(51, 51, 51, 0.85);
 border-color: rgba(51, 51, 51, 0.85);
}
.card-img-top{
  margin-top:10px;
}
.col-xs-12{
  text-align:center;
  margin-left:auto;
  margin-right:auto;
}
.row{
  margin-left:auto;
  margin-right:auto;
}
.card-footer {
  position: absolute;
  width: 100%;
bottom: 0px;
}
#pagenation .btn {
    padding:0;
    width:70px;
    margin-top:-20px;
}
.heading-bar {
  padding-bottom:1px !important;
  padding-top:7px;
  background:#FAFAFA;
  box-shadow:0 7px 7px 1px #aaa;
}
</style>
</html>
